<% if @non_grouped_ingredients.count > 0 %>
  <div class="card mb-3">
    <div class="card-body">
      <div class="row">      
        <div class="col-9"><strong>Total spent:</strong></div>
        <div class="col-3">US$ <%= @spent %></div>
      </div>
    </div>
  </div>     

  <% @non_grouped_ingredients.each do |i| %>
    <a href="<%= edit_ingredient_path(i.id) %>" class="card mb-3">
      <div class="card-body">
        <div class="row">
          <div class="col-9">        
            <strong><%= i.name %></strong>
            <br>Created at <%= i.created_at.strftime("%Y-%m-%d") %>
            <br>By: <span class="badge badge-secondary"><%= i.author.name %></span>
            <br>Store: <span class="badge badge-secondary"><%= i.store.name %></span>
          </div>
          <div class="col-3">        
            US$ <%= i.amount %>
          </div>
        </div>
      </div>
    </a>                   
  <% end %>
<% else %>
  <div class="card mb-3">
    <div class="card-body">
      <div class="row">      
        <div class="col-12">There are no ingredients in this list.</div>                
      </div>
    </div>
  </div>         
<% end %>
<%= link_to 'Add new', new_ingredient_path, class: 'btn btn-lg btn-success btn-block mb-4' %>

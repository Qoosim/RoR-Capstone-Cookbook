<%= form_with(model: store, local: true) do |f| %>
  <div class="card mb-3">
    <div class="card-body">
      <div class="form-group">
        <%= f.label :name, 'Name: ', class: 'sr-only' %>
        <%= f.text_field :name, class: 'form-control', maxlength: 36, placeholder: 'Name' %>
     </div>
    </div>
  </div> 
  <%= f.submit 'Save store', class: 'btn btn-lg btn-success btn-block'%>
<% end %>
